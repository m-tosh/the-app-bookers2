<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'common/user_info', user: @user %>
      <%= render 'common/new_book' %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |a_user| %>
          <tr>
            <td>
              <%= attachment_image_tag a_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
            </td>
            <td><%= a_user.name %></td>
            <td><%= link_to "Show", user_path(a_user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    </div>
</div>