<h2>User info</h2>
<table class='table'>
  <tr>
    <% if user.profile_image.attached? %>
      <%= image_tag user.profile_image, size: '80x80' %>
    <% else %>
      <%= image_tag 'no_image.jpg' %>
    <% end %>
  </tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
</table>

<div class='row'>
  <%= link_to "", edit_user_path(user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
</div>