<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></tr>
        <tr>
      	  <th>name</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= @user.introduction %></th>
        </tr>
      </table>

      <div class='row'>
        <%= link_to "", edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      </div>
      <%= render 'common/new_book' %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%= @books.each do |a_book| %>
          <tr>
            <td>
              <%= link_to user_path(a_book.user.id) do %>
                <%= attachment_image_tag a_book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
              <% end %>
            </td>
            <td><%= link_to a_book.title, book_path(a_book.id) %></td>
            <td><%= a_book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    </div>
</div>